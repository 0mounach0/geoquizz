{% extends 'template/app.twig' %}

{% block content %}

    <div class="container" style="margin-top: 10px;">

    <form action="{{ path_for('editSandwich',{ 'id': sandwich.id}) }}" method="post" >
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="nom">Nom</label>
      <input type="text" class="form-control" value="{{sandwich.nom}}" id="nom" name="nom" placeholder="Nom" required>
    </div>
    <div class="form-group col-md-6">
      <label for="prix">Prix</label>
      <input type="text" class="form-control" id="prix" name="prix" value="{{sandwich.prix}}" placeholder="5.36 ..." required>
    </div>
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <input type="text" class="form-control" id="description" value="{{sandwich.description}}" name="description" required placeholder="Description ...">
  </div>
  <div class="form-group">
    <label for="type">Type de pain</label>
    <input type="text" class="form-control" id="type" value="{{sandwich.type_pain}}" name="type" placeholder="baguette ..." required>
  </div>
  
  <button type="submit" class="btn btn-primary">modifier le Sandwich</button>

  <input type="hidden" name="{{ csrf.nameKey }}" value="{{ csrf.name }}">
  <input type="hidden" name="{{ csrf.valueKey }}" value="{{ csrf.value }}">
</form>

    


    </div>
{% endblock %}